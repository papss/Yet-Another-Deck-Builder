<p id="notice"><%= notice %></p>

<h1> <%= @deck.name %> </h1>

<h2>Add a card:</h2>

<div class="container--form-container">
  <%= form_with url: scryfall_path, method: "get", remote: true, class: "form-inline" do %>
    <%= text_field_tag :card_name, nil, class: "form-control", placeholder: "Card" %>
    <%= submit_tag "Search", name: nil, class: "btn btn-primary" %>
  <% end %>
</div>

<%= link_to 'Edit', edit_deck_path(@deck) %>
<%= link_to 'Delete', deck_path(@deck), method: :delete, data: { confirm: 'Are you sure?' }%>
<%= link_to 'Back', decks_path %>
